<resources>
    <style name="ThemeAppCompatDark" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ThemeAppCompatLight" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ThemeDeviceDefaultDark" parent="android:Theme.DeviceDefault">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ThemeDeviceDefaultLight" parent="android:Theme.DeviceDefault.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">123dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">26sp</item>
    </style>

    <string-array name="drawer_item_array">
        <item>设备管理</item>
        <item>用户信息</item>
        <item>设置</item>
        <item>帮助</item>
        <item>退出登录</item>
        <item>关于</item>
    </string-array>

    <string-array name="send_spinner">
        <item>本地保存</item>
        <item>3G发送</item>
    </string-array>

    <string-array name="method_spinner">
        <item>静默模式</item>
        <item>极速模式</item>
    </string-array>

    <string name="drawer_open">打开抽屉导航</string>
    <string name="drawer_close">关闭抽屉导航</string>
</resources>
