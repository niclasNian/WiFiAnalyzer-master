<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:paddingTop="20dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_marginTop="10dp"
    android:layout_weight="1"
    android:gravity="center">
    <TextView 
        android:id="@+id/title"
        android:textSize="32sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:layout_centerHorizontal="true"
        android:text="客户端枚举"
        android:textColor="@android:color/white"
        />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:gravity="center">
    <TextView 
        android:id="@+id/desc"
        android:text="使用前置设备扫描无线热点，并枚举的无线热点下的客户端信息，包括：机器名字、mac地址等。"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:textColor="@android:color/white"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:gravity="center">
    <Button 
        android:id="@+id/apenum"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:textSize="28sp"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:text="枚举指定热点"
        android:layout_below="@id/desc"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:gravity="center">
    <Button 
        android:id="@+id/allenum"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:textSize="28sp"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:text="枚举所有热点"
        android:layout_below="@id/apenum"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1.3"
        android:gravity="center">
   
    <RelativeLayout 
        android:id="@+id/btnlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/allenum"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        >
        
        <Button 
        android:id="@+id/cancelButton"
        android:text="取消"
        android:layout_centerHorizontal="true"
        style="@style/ButtonStyle"
        />
    </RelativeLayout>
        </LinearLayout>
</LinearLayout>
<RelativeLayout
        android:id="@+id/left_container"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start">

        <ListView
            android:id="@+id/left_drawer"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:cacheColorHint="@android:color/transparent"
            android:choiceMode="singleChoice"
            android:dividerHeight="2dp"
            android:layout_marginTop="20dp"
            android:divider="#687595"
            android:listSelector="@drawable/device_listview_selector"
             />
    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>