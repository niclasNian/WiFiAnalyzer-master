<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_dos_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center">
        <TextView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:text="使用前置设备对选定的目标无线热点或者频段发动拒绝服务攻击，使目标无线热点或则相应频段下的客户端无法正常连接。"
            android:textColor="@android:color/white" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center">
        <Button
            android:id="@+id/apdos"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@id/desc"
            android:textAllCaps="false"
            android:gravity="center"
            android:text="选择目标热点"
            android:textColor="@android:color/white"
            android:textSize="28sp" 
            android:singleLine="true"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center">

        <Button
            android:id="@+id/channeldos"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@id/apdos"
            android:gravity="center"
            android:text="选择目标频段"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            android:singleLine="true" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center">
        <Button
            android:id="@+id/mchanneldos"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@id/channeldos"
            android:gravity="center"
            android:text="选择多目标频段"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            android:singleLine="true" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center">
        <RelativeLayout
            android:id="@+id/btnlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/channeldos"
            android:gravity="center" >

            <Button
                android:id="@+id/startButton"
                android:text="开始"
                style="@style/ButtonStyle"/>
        </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>