<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:gravity="center_vertical"
    android:padding="15dp">

    <RelativeLayout
        android:id="@+id/maclayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp">

        <TextView
            android:id="@+id/mactext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="3dp"
            android:text="MAC："
            android:textSize="20sp"
            android:singleLine="true"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/mac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/mactext"
            android:padding="3dp"
            android:textSize="20sp"
            android:singleLine="true"
            android:textColor="@android:color/white"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/probelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/maclayout"
        android:layout_marginLeft="8dp">

        <TextView
            android:id="@+id/probetext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="3dp"
            android:text="首选ap："
            android:textSize="16sp"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/probe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/probetext"
            android:padding="3dp"
            android:textSize="16sp"
            android:textColor="@android:color/white"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/companylayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/probelayout"
        android:layout_marginLeft="8dp">

        <TextView
            android:id="@+id/companytext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="3dp"
            android:text="厂商:"
            android:textSize="12sp"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/companytext"
            android:padding="3dp"
            android:textSize="12sp"
            android:singleLine="true"
            android:textColor="@android:color/white"/>
    </RelativeLayout>
</RelativeLayout>