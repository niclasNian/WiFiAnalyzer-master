<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scanlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    ><RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/above"
        >
        <ImageView 
            android:id="@+id/lock"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            />
        <ImageView 
            android:id="@+id/wps"
            android:layout_width="24dp"
            android:layout_height="16dp"
            android:layout_toLeftOf="@id/lock"
            android:layout_marginRight="8dp"
            />
        <ImageView 
            android:id="@+id/wep"
            android:layout_width="24dp"
            android:layout_height="16dp"
            android:layout_toLeftOf="@id/wps"
            android:layout_marginRight="8dp"
            />
        <ImageView 
            android:id="@+id/wpa"
            android:layout_width="24dp"
            android:layout_height="16dp"
            android:layout_toLeftOf="@id/wep"
            android:layout_marginRight="8dp"
            />
        <RelativeLayout 
            android:id="@+id/channellayout"
            android:layout_width="26dp"
            android:layout_height="20dp"
            android:layout_toLeftOf="@id/wpa"
            android:gravity="center"
            android:layout_marginRight="8dp"
            >
        <ImageView 
            android:id="@+id/channelnumber1"
            android:layout_width="wrap_content"
            android:layout_height="8dp"
            />
        <ImageView 
            android:id="@+id/channelnumber2"
            android:layout_width="wrap_content"
            android:layout_height="8dp"
            android:visibility="gone"
            android:layout_toRightOf="@id/channelnumber1"
            android:layout_marginLeft="2dp"
            
            />
        </RelativeLayout>
        <RelativeLayout 
            android:id="@+id/devicelayout"
            android:layout_width="26dp"
            android:layout_height="24dp"
            android:layout_toLeftOf="@id/channellayout"
            android:layout_marginRight="8dp"
            android:gravity="center"
            >
        <ImageView 
            android:id="@+id/devicenumber1"
            android:layout_width="wrap_content"
            android:layout_height="8dp"
            android:layout_marginLeft="2dp"
            />
        <ImageView 
            android:id="@+id/devicenumber2"
            android:layout_width="wrap_content"
            android:layout_height="8dp"
            android:layout_toLeftOf="@id/devicenumber1"
            android:visibility="gone"
            android:layout_marginLeft="2dp"
            />
        <ImageView 
            android:id="@+id/devicenumber3"
            android:layout_width="wrap_content"
            android:layout_height="8dp"
            android:layout_toLeftOf="@id/devicenumber2"
            android:visibility="gone"
            android:layout_marginLeft="2dp"
            />
        </RelativeLayout>
    </RelativeLayout>

        <TextView
            android:id="@+id/ssid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:textSize="22sp"
            android:textColor="@android:color/white"
            android:layout_marginLeft="8dp"
            android:singleLine="true"
            android:layout_below="@id/above"
            />

</RelativeLayout>